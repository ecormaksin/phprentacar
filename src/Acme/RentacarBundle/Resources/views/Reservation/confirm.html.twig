{% extends "AcmeRentacarBundle::base.html.twig" %}

{% block page_title %}予約内容確認{% endblock %}

{% block content %}
<h3>請求金額</h3>

<div class="row">
	<div class="span6">
		<table class="amount-table table table-bordered">
			<thead>
				<tr>
					<th>品目</th>
					<th class="amount-col">小計</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>Aクラス</td>
					<td class="amount-col">&yen; {{ 7000|number_format }}</td>
				</tr>
				<tr>
					<td>オプション</td>
					<td class="amount-col">&yen; {{ 1000|number_format }}</td>
				</tr>
				<tr class="total-amount-row">
					<td>合計金額</td>
					<td class="amount-col">&yen; {{ 8000|number_format }}</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>

<h3>入力内容確認</h3>

<fieldset>
	<legend>出着情報</legend>

	<div class="control-group">
		<label class="control-label">出発</label>
		<div class="controls">
			2012/04/01 10:00
			神楽坂営業所
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">返却</label>
		<div class="controls">
			2012/04/01 10:00
			神楽坂営業所
		</div>
	</div>
	<div>
		<a href="{{ path('reservation_new') }}" class="btn">出着情報を変更する</a>
	</div>
</fieldset>
<br>

<fieldset>
	<legend>車種</legend>
	<div>
		<a href="{{ path('reservation_car') }}" class="btn">車種を変更する</a>
	</div>
</fieldset>
<br>

<fieldset>
	<legend>オプション</legend>
	<div class="control-group">
		<label class="control-label">免責補償</label>
		<div class="controls">
			あり
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">備考</label>
		<div class="controls">
		</div>
	</div>
	<div>
		<a href="{{ path('reservation_option') }}" class="btn">オプションを変更する</a>
	</div>
</fieldset>
<br>

<form action="{{ path('reservation_confirm') }}" method="post">
	<div class="form-actions">
		<input type="submit" class="btn btn-primary btn-large" value="予約を確認する">
	</div>
</form>
{% endblock %}
